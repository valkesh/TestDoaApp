<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="400dp"
    android:layout_height="match_parent">




        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="center"
            android:background="#FFFFBB33"
            android:id="@+id/image"

            android:contentDescription="@string/app_name"
            android:layout_alignStart="@+id/dialogButtonOK" />

        <EditText
            android:id="@+id/phoneno"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="sans-serif"
            android:hint="phoneno"
            android:layout_below="@+id/image"
            android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/phoneno"
        android:background="@color/colorYellow"
        android:textStyle="bold"
        android:layout_alignStart="@+id/phoneno" />

    <Button
        android:id="@+id/btCancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dialogButtonOK"
        android:layout_marginStart="69dp"
        android:layout_toEndOf="@+id/dialogButtonOK"
        android:text="Cancle"
        android:textStyle="bold"
        android:background="@color/colorYellow"
        android:layout_alignBottom="@+id/dialogButtonOK" />

</RelativeLayout>

